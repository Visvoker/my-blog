{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "slug": {
      "type": "uid"
    },
    "content": {
      "type": "blocks"
    },
    "excerpt": {
      "type": "string"
    },
    "datePublished": {
      "type": "datetime"
    },
    "coverImage": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "currentState": {
      "type": "enumeration",
      "enum": [
        "Draft",
        "Published",
        "Pending Review"
      ]
    }
  }
}
